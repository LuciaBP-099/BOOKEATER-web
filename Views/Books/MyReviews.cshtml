@model IEnumerable<BookEater.Models.Review>

@{
    ViewData["Title"] = "My Reviews";
}

<div class="container py-5" style="max-width: 800px;">

    <div class="mb-5 border-bottom pb-3">
        <h1 class="display-5 fw-bold" style="font-family: Georgia, serif;">My Reviews</h1>
        <p class="text-muted">Your thoughts and opinions.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <p class="lead text-muted">You haven't written any reviews yet.</p>
            <a asp-action="Index" class="btn btn-dark rounded-pill px-4">Go to Library</a>
        </div>
    }
    else
    {
        @foreach (var review in Model)
        {
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-baseline">
                    <h3 class="h4 fw-bold mb-1">
                        <a asp-action="Details" asp-route-id="@review.BookId" class="text-dark text-decoration-none hover-underline">
                            @review.Book?.Title
                        </a>
                    </h3>

                    <div class="text-warning text-nowrap">
                        @for (int i = 0; i < review.Rating; i++)
                        {
                            <span>★</span>
                        }
                        <span class="text-muted small ms-1">(@review.Rating/5)</span>
                    </div>
                </div>

                <p class="text-muted small mb-3">@review.DatePosted.ToShortDateString()</p>

                <figure class="bg-light p-4 rounded-3 mb-2">
                    <blockquote class="blockquote fs-6 mb-0 fst-italic text-secondary text-break">
                        "@review.Content"
                    </blockquote>
                </figure>

                <div class="text-end">
                    <a asp-action="DeleteReview" asp-route-id="@review.ReviewId" class="text-danger small text-decoration-none fw-bold">
                        Delete Review
                    </a>
                </div>
            </div>
        }
    }
</div>