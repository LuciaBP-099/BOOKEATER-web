@model BookEater.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">

            <div class="mb-3 display-4 text-secondary">💬</div>
            <h2 class="mb-3 fw-bold" style="font-family: Georgia, serif;">Delete Review?</h2>
            <p class="text-muted mb-5">
                Are you sure you want to delete your review for:
            </p>

            <div class="p-4 bg-light border rounded-3 mb-5 shadow-sm text-start">
                <h3 class="fw-bold text-center mb-4">@Model.Book?.Title</h3>

                <figure class="text-center">
                    <blockquote class="blockquote">
                        <p class="fst-italic text-muted text-break">"@Model.Content"</p>
                    </blockquote>
                    <figcaption class="blockquote-footer mt-2">
                        Your review
                    </figcaption>
                </figure>
            </div>

            <form asp-action="DeleteReview">
                <input type="hidden" asp-for="ReviewId" />

                <div class="d-grid gap-2 col-8 mx-auto">
                    <input type="submit" value="Yes, Delete Review" class="btn btn-danger btn-lg rounded-pill" />
                    <a asp-action="MyReviews" class="btn btn-link text-muted text-decoration-none mt-2">Cancel and go back</a>
                </div>
            </form>

        </div>
    </div>
</div>