@model BookEater.Models.Book

@{
    ViewData["Title"] = "Create Book";
}

<div class="container mt-4">
    <h1>Add a New Book</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Author" class="control-label fw-bold"></label>
                    <input asp-for="Author" class="form-control" placeholder="Author's name" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Genre" class="control-label fw-bold"></label>
                    <input asp-for="Genre" class="form-control" placeholder="Genre (e.g. Fantasy, Sci-Fi)" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Rating" class="control-label fw-bold"></label>
                    <input asp-for="Rating" class="form-control" type="number" step="0.1" min="0" max="5" placeholder="0 - 5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label class="control-label fw-bold">Save to List</label>
                    <input type="text" name="ListName" class="form-control" placeholder="E.g., Favorites, Summer Reads..." />
                    <small class="text-muted">Type a list name or leave empty for 'General'.</small>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
