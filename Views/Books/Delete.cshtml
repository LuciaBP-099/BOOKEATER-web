@model BookEater.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            
            <div class="mb-3 display-4 text-secondary">🗑️</div>
            <h2 class="mb-3 fw-bold" style="font-family: Georgia, serif;">Delete this book?</h2>
            <p class="text-muted mb-5">
                Are you sure you want to remove this entry from your library? <br>
                This action cannot be undone.
            </p>

            <div class="p-4 bg-light border rounded-3 mb-5 shadow-sm">
                <h3 class="fw-bold mb-1">@Model.Title</h3>
                <p class="fst-italic text-muted mb-4">by @Model.Author</p>

                <div class="d-flex justify-content-center gap-4 small border-top pt-3">
                    <div>
                        <span class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Genre</span>
                        <div class="text-dark">@Model.Genre</div>
                    </div>
                    <div class="vr"></div> <div>
                        <span class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Rating</span>
                        <div class="text-warning">@Model.Rating ★</div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete"> 
                <input type="hidden" asp-for="BookId" />
                
                <div class="d-grid gap-2 col-8 mx-auto">
                    <input type="submit" value="Yes, Delete Book" class="btn btn-danger btn-lg rounded-pill" />
                    <a asp-action="Index" class="btn btn-link text-muted text-decoration-none mt-2">Cancel and go back</a>
                </div>
            </form>

        </div>
    </div>
</div>