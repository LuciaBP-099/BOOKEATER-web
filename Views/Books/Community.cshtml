@model IEnumerable<BookEater.Models.Book>

@{
    ViewData["Title"] = "Community Reviews";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <span style="font-size: 3rem;">üåç</span>
        <h1 class="fw-bold" style="font-family: Georgia, serif;">Community Library</h1>
        <p class="text-muted">Explore books and see what others are thinking.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 bg-light">
                    <div class="card-body text-center p-4">
                        <div class="mb-3" style="font-size: 2.5rem;">üìï</div>
                        
                        <h5 class="card-title fw-bold mb-1">@book.Title</h5>
                        <p class="card-text text-muted small fst-italic mb-3">by @book.Author</p>

                        <div class="mb-3 text-warning">
                             @book.Rating ‚òÖ
                        </div>

                        <p class="small text-muted border-top pt-3">
                            üí¨ @book.Reviews.Count reviews available
                        </p>

                        <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-dark rounded-pill w-100">
                            See Reviews
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>