@model BookEater.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none text-muted small">&larr; Back to Library</a>
            </div>

            <div class="p-5 bg-light border rounded-3 shadow-sm mb-5">
                <div class="text-center mb-3">
                    <span style="font-size: 3rem;">📖</span>
                </div>

                <div class="text-center mb-5">
                    <h1 class="display-4 fw-bold mb-2" style="font-family: Georgia, serif;">
                        @Html.DisplayFor(model => model.Title)
                    </h1>
                    <p class="fs-4 text-muted fst-italic">
                        by @Html.DisplayFor(model => model.Author)
                    </p>
                </div>

                <hr class="my-4 text-muted" style="opacity: 0.2;">

                <div class="row text-center">
                    <div class="col-6 border-end">
                        <span class="text-uppercase small text-muted fw-bold">Genre</span>
                        <div class="fs-5 mt-1">@Html.DisplayFor(model => model.Genre)</div>
                    </div>
                    
                    <div class="col-6">
                        <span class="text-uppercase small text-muted fw-bold">Avg Rating</span>
                        <div class="fs-5 mt-1 text-warning fw-bold">
                            @if (Model.Rating > 0)
                            {
                                @Model.Rating?.ToString("0.0") <span>★</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                     <a asp-action="Edit" asp-route-id="@Model?.BookId" class="btn btn-outline-dark btn-sm rounded-pill px-4">
                        Edit My List / Rate
                    </a>
                </div>
            </div>

            <div class="mb-4 d-flex justify-content-between align-items-center border-bottom pb-2">
                <h3 class="fw-bold" style="font-family: Georgia, serif;">Community Reviews</h3>
                
                <a asp-action="WriteReview" asp-route-id="@Model.BookId" class="btn btn-dark rounded-pill btn-sm">
                    ✍️ Write Review
                </a>
            </div>

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="vstack gap-4">
                    @foreach (var review in Model.Reviews.OrderByDescending(r => r.DatePosted))
                    {
                        <div class="card border-0 shadow-sm">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <span class="fw-bold text-uppercase">
                                                @(review.User?.Email?.Substring(0, 1) ?? "?")
                                            </span>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">
                                                @(review.User?.Email ?? "Unknown User")
                                            </h6>
                                            <small class="text-muted">@review.DatePosted.ToShortDateString()</small>
                                        </div>
                                    </div>
                                    <div class="text-warning">
                                        @for (int i = 0; i < review.Rating; i++) { <span>★</span> }
                                    </div>
                                </div>
                                <p class="card-text fst-italic text-muted border-start border-4 ps-3">
                                    "@review.Content"
                                </p>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 border rounded-3 bg-light text-muted">
                    <p class="mb-2" style="font-size: 2rem;">📭</p>
                    <p>No reviews yet for this book.</p>
                </div>
            }
        </div>
    </div>
</div>