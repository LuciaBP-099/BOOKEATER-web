@model BookEater.Models.Review
@{
    ViewData["Title"] = "Admin Delete Review";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">

            <div class="mb-3 display-4 text-danger">üõ°Ô∏è</div>
            <h2 class="mb-3 fw-bold text-danger">Moderator Action</h2>
            <p class="text-muted mb-4">
                You are about to delete a user's review PERMANENTLY.
            </p>

            <div class="p-4 bg-light border border-danger rounded-3 mb-4 text-start shadow-sm">
                <div class="d-flex justify-content-between border-bottom pb-2 mb-3">
                    <span class="fw-bold text-dark">User: @(Model.User?.Email)</span>
                    <span class="text-muted small">@Model.DatePosted.ToShortDateString()</span>
                </div>
                
                <p class="fst-italic text-secondary">"@Model.Content"</p>
                
                <div class="text-end text-warning fw-bold">
                    Rating: @Model.Rating ‚òÖ
                </div>
            </div>

            <form asp-action="DeleteReview">
                <input type="hidden" asp-for="ReviewId" />
                <div class="d-grid gap-2 col-8 mx-auto">
                    <input type="submit" value="Confirm Deletion" class="btn btn-danger btn-lg" />
                    <a asp-action="Reviews" asp-route-id="@Model.BookId" class="btn btn-link text-muted">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>