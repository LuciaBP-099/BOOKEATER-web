@model IEnumerable<BookEater.Models.Book>
@{
    ViewData["Title"] = "Global Library";
}

<div class="container py-5">
    <div class="d-flex justify-content-between mb-4">
        <h2>ðŸ“š Global Book Database</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <table class="table table-striped bg-white shadow-sm align-middle">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Rating</th>
                <th>Reviews</th>
                <th>Actions</th> </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Genre</td>
                    <td class="text-warning">@item.Rating â˜…</td>
                    <td>
                        <span class="badge bg-secondary rounded-pill">@item.Reviews.Count</span>
                    </td>
                    <td>
                        <a asp-action="Reviews" asp-route-id="@item.BookId" class="btn btn-sm btn-outline-dark">
                            Manage Reviews
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>