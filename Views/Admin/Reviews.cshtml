@model BookEater.Models.Book
@{
    ViewData["Title"] = "Manage Reviews";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Reviews for: <span class="text-primary">@Model.Title</span></h2>
            <p class="text-muted mb-0">Moderation Panel</p>
        </div>
        <a asp-action="AllBooks" class="btn btn-secondary">Back to Books</a>
    </div>

    @if (!Model.Reviews.Any())
    {
        <div class="alert alert-info">
            No reviews found for this book.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>User</th>
                            <th>Date</th>
                            <th>Rating</th>
                            <th style="width: 50%;">Content</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model.Reviews.OrderByDescending(r => r.DatePosted))
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold">@(review.User?.Email ?? "Unknown")</span>
                                </td>
                                <td class="small text-muted">@review.DatePosted.ToShortDateString()</td>
                                <td class="text-warning text-nowrap">
                                    @review.Rating â˜…
                                </td>
                                <td>
                                    <span class="fst-italic text-muted">"@review.Content"</span>
                                </td>
                                <td>
                                    <a asp-action="DeleteReview" asp-route-id="@review.ReviewId" class="btn btn-danger btn-sm text-white">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>